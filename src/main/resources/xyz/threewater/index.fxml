<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import xyz.threewater.dir.NavTree?>
<?import xyz.threewater.plugin.maven.MavenPlugin?>
<?import xyz.threewater.console.Console?>
<?import xyz.threewater.bar.TitleBar?>
<?import xyz.threewater.common.component.ImageTextButton?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="xyz.threewater.controller.IndexController">
    <top>
        <TitleBar fx:id="titleBar"/>
    </top>
    <left>
        <NavTree fx:id="navTree"/>
    </left>
    <right>
        <MavenPlugin fx:id="mavenPlugin">

        </MavenPlugin>

    </right>
    <bottom>
        <VBox>
            <StackPane fx:id="bottomContent">
                <Console fx:id="console"/>
                <Label fx:id="buildResult" visible="false"/>
            </StackPane>
            <HBox fx:id="bottomToolBar">
                <ImageTextButton imagePath="images/maven/terminal-black.png" text="terminal"/>
                <ImageTextButton imagePath="images/maven/build-black.png" text="build"/>
            </HBox>
        </VBox>
    </bottom>
    <center>
        <TabPane fx:id="tabPane"/>
    </center>
</BorderPane>
